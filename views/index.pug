extends layout

block content
    section.hero
        .hero-content
            h1 FindNLog
            p Detect and log objects with ease using our advanced machine learning technology.
            .tech-icons
                i.fab.fa-js(title="TensorFlow.js")
                i.fab.fa-node-js(title="Node.js")
                i.fab.fa-node(title="Express")
            .video-container
                video(src="/videos/object-detection-demo.mp4", controls)
        .auth-forms
            if error
                p.error= error
            form.login-form(action="/login", method="POST")
                h2 Login
                input(type="email", name="email", placeholder="Email", required)
                input(type="password", name="password", placeholder="Password", required)
                button(type="submit") Log In
            form.signup-form(action="/signup", method="POST")
                h2 Sign Up
                input(type="text", name="firstName", placeholder="First Name", required)
                input(type="text", name="lastName", placeholder="Last Name", required)
                input(type="email", name="email", placeholder="Email", required)
                input(type="password", name="password", placeholder="Password", required)
                button(type="submit") Sign Up

    section.how-to-use
        h2 How do I use it?
        .steps
            .step
                i.fas.fa-list-alt
                h3 1. Select from list of searchable objects
                p Choose the objects you want to detect from our extensive list.
            .step
                i.fas.fa-brain
                h3 2. Object detection model finds and logs
                p Our AI model detects objects in real-time and logs them for you.
            .step
                i.fas.fa-search
                h3 3. Search from your list of objects
                p Easily find and filter your personal detected objects.

    section.features
        h2 Key Features
        .feature-grid
            .feature
                i.fas.fa-search
                h3 Advanced Object Detection
                p Detect multiple objects in images or video streams with high accuracy.
            .feature
                i.fas.fa-database
                h3 Efficient Logging
                p Automatically save and organize detected objects for easy retrieval.
            .feature
                i.fas.fa-mobile-alt
                h3 Mobile Friendly
                p Use FindNLog on any device, anywhere, anytime.
            .feature
                i.fas.fa-chart-line
                h3 Real-time Analytics
                p Get insights on your detected objects with our built-in analytics.
//- Extends the main layout template
extends layout

block content
    section.hero
        .hero-content
            //- Main heading for the hero section
            h1 FindNLog
            //- Description of the application
            p Detect and log objects with ease using our advanced machine learning technology.
            //- Container for technology icons
            .tech-icons
                //- Icon for TensorFlow.js
                i.fab.fa-js(title="TensorFlow.js")
                //- Icon for Node.js
                i.fab.fa-node-js(title="Node.js")
                //- Icon for Express
                i.fab.fa-node(title="Express")
            //- Container for the project demo video
            .video-container
                video(src="/videos/project-demo.mp4", controls)
        .auth-forms
            //- Login form
            form.login-form
                h2 Login
                input(type="email", placeholder="Email", required)
                input(type="password", placeholder="Password", required)
                button(type="submit") Log In
            //- Signup form
            form.signup-form
                h2 Sign Up
                input(type="text", placeholder="First Name", required)
                input(type="text", placeholder="Last Name", required)
                input(type="email", placeholder="Email", required)
                input(type="password", placeholder="Password", required)
                button(type="submit") Sign Up

    section.how-to-use
        //- Section heading for usage instructions
        h2 How do I use it?
        .steps
            .step
                //- Image for step 1
                img(src="/images/step1.png", alt="Step 1")
                //- Heading for step 1
                h3 1. Select from list of searchable objects
                //- Description for step 1
                p Choose the objects you want to detect from our extensive list.
            .step
                //- Image for step 2
                img(src="/images/step2.png", alt="Step 2")
                //- Heading for step 2
                h3 2. Object detection model performs inference and logging saves object
                //- Description for step 2
                p Our AI model detects objects in real-time and logs them for you.
            .step
                //- Image for step 3
                img(src="/images/step3.png", alt="Step 3")
                //- Heading for step 3
                h3 3. Search from your list of objects
                //- Description for step 3
                p Easily find and manage your detected objects in your personal list.

    section.features
        //- Section heading for key features
        h2 Key Features
        .feature-grid
            .feature
                //- Icon for advanced object detection
                i.fas.fa-search
                //- Heading for advanced object detection
                h3 Advanced Object Detection
                //- Description for advanced object detection
                p Detect multiple objects in images or video streams with high accuracy.
            .feature
                //- Icon for efficient logging
                i.fas.fa-database
                //- Heading for efficient logging
                h3 Efficient Logging
                //- Description for efficient logging
                p Automatically save and organize detected objects for easy retrieval.
            .feature
                //- Icon for mobile friendly
                i.fas.fa-mobile-alt
                //- Heading for mobile friendly
                h3 Mobile Friendly
                //- Description for mobile friendly
                p Use FindNLog on any device, anywhere, anytime.
            .feature
                //- Icon for real-time analytics
                i.fas.fa-chart-line
                //- Heading for real-time analytics
                h3 Real-time Analytics
                //- Description for real-time analytics
                p Get insights on your detected objects with our built-in analytics.

    section.cta
        //- Section heading for call to action
        h2 Ready to start detecting?
        //- Description for call to action
        p Join thousands of users who are already using FindNLog to simplify their object detection needs.
        //- Button for call to action
        button.cta-button Get Started for Free
